# üîê Environment Template for Vercel

# Copy this file and replace with your actual values
# DO NOT commit actual credentials to Git

# Application Settings
APP_NAME="Company Interior"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-vercel-domain.vercel.app

# Database Configuration (Replace with your Aiven credentials)
DB_CONNECTION=mysql
DB_HOST=your-aiven-host.aivencloud.com
DB_PORT=your-port
DB_DATABASE=your-database-name
DB_USERNAME=your-username
DB_PASSWORD=your-secure-password

# Cache & Session (Vercel Optimized)
CACHE_DRIVER=array
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
QUEUE_CONNECTION=sync

# Logging & Debug
LOG_CHANNEL=stderr
LOG_LEVEL=error

# Vercel Specific
VERCEL_DEMO_MODE=true
APP_CONFIG_CACHE=/tmp/config.php
APP_EVENTS_CACHE=/tmp/events.php
APP_PACKAGES_CACHE=/tmp/packages.php
APP_ROUTES_CACHE=/tmp/routes.php
APP_SERVICES_CACHE=/tmp/services.php
VIEW_COMPILED_PATH=/tmp

# Mail Configuration
MAIL_MAILER=log
MAIL_FROM_ADDRESS=hello@your-domain.com
MAIL_FROM_NAME="Company Interior"
